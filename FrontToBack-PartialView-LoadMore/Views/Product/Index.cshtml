@model List<Product>


@{
    ViewData["Title"] = "Index";
}
    <div class="container">
        <div class="row justify-content-center">
        @foreach (var product in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
                <div class="product-item text-center" data-id="@product.Category.Name">
                    <div class="img">
                        <a href="">
                            <img src="@(product.ProductImage.FirstOrDefault(i=>i.IsMain).ImgUrl??"img/lorem")" class="img-fluid" alt="">
                        </a>
                    </div>
                    <div class="title mt-3">
                        <h6>MAJESTY PALM</h6>
                    </div>
                    <div class="price">
                        <span class="text-black-50">Add to cart</span>
                        <span class="text-black-50">@product.Price</span>
                    </div>
                </div>
            </div>
        }
        <button id="loadMoreBtn" class="btn btn-success">Load More..</button>
        </div>
    </div>

