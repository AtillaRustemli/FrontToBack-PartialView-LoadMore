@model List<Product>;

@foreach (var product in Model)
{
    <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
        <div class="product-item text-center" data-id="popular">
            <div class="img">
                <a href="">
                    <img src="@(product.ProductImage.FirstOrDefault(i=>i.IsMain).ImgUrl??"img/lorem")" class="img-fluid" alt="">
                </a>
            </div>
            <div class="title mt-3">
                <h6>MAJESTY PALM</h6>
            </div>
            <div class="price">
                <a asp-controller="Basket" asp-action="addbasket" asp-route-id="@product.Id"><span class="text-black-50">Add to cart</span></a>
                <span class="text-black-50">@product.Price</span>
            </div>
        </div>
    </div>
}