@model List<BasketVM>

@{
    ViewData["Title"] = "ShowBasket";
}
<div class="container">
    <div class="row justify-content-center">
        @if (Model.Count > 0)
        {

            <table>
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>BasketCount</th>
                        <th>Settings</th>
                    </tr>
                </thead>
                <tbody>

                      @foreach (var item in Model)
                {
                <tr>
                <td><img src="img/@item.ImgUrl" /></td>
                <td>@item.Name </td>
                <td>@item.Price</td>
                            <td>- @item.BasketCount <a asp-controller="basket" asp-action="add" asp-route-id="@item.Id">+</a> </td>
                <td>x</td>

                </tr>
                }

                </tbody>

            </table>

        }
        else
        {

            <h1>Basket yoxdur <a asp-controller="home" asp-action="index">Go to home page</a></h1>
        }
    </div>
</div>