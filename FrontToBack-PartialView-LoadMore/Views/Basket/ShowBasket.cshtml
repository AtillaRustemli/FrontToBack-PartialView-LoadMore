@using Newtonsoft.Json;
@model List<BasketVM>

@{
    ViewData["Title"] = "ShowBasket";
}
@{
    double totalPrice = Model.Sum(c => c.Price);
}


<div class="container">
    <div class="row justify-content-center">
        @if (Model.Count > 0)
        {

            <table>
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>BasketCount</th>
                        <th>Settings</th>
                    </tr>
                </thead>
                <tbody>

                      @foreach (var item in Model)
                {
                <tr>
                <td><img src="img/@item.ImgUrl" /></td>
                <td>@item.Name </td>
                <td>@item.Price</td>
                            <td>
                                <a asp-controller ="basket" asp-action="reduce" asp-route-id="@item.Id">-</a>
                                @item.BasketCount
                                <a asp-controller="basket" asp-action="add" asp-route-id="@item.Id" >+</a> </td>
                <td asp-controller="basket" asp-action="Remove" asp-route-id="@item.Id">x</td>
                            
                </tr>
                        <p asp-controller="basket" asp-action="totalprice" asp-route-id="@item.Id">Total Price: </p>
                }

                </tbody>

            </table>
            <p>totalPrice </p>
            

        }
        else
        {

            <h1>Basket yoxdur <a asp-controller="home" asp-action="index">Go to home page</a></h1>
        }
    </div>
</div>