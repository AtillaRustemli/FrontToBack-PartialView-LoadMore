@model CreateProductVM
@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <div class="row">
        <h3>Create Product</h3>
        <form class="forms-sample" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Name">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for ="Price"></label>
                <input asp-for="Price" class="form-control" placeholder="Price">
                <span class="text-danger" asp-validation-for="Price"></span>
            </div>
            <div class="form-group">
                <label asp-for="Photo"></label>
                <input asp-for="Photo" multiple class="form-control" placeholder="Photo">
                <span class="text-danger" asp-validation-for="Photo"></span>
            </div>
            <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories"></select>

            <button type="submit" class="btn btn-primary me-2">Submit</button>
            <button asp-controller="product" asp-action="index" class="btn btn-light">Go Back</button>
        </form>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScript" />
}
