@model List<Book>

@{
    ViewData["Title"] = "Index";
}
@if(Model.Count>0){
    <a asp-controller="demo" asp-action="create"> Add Book</a>
    <hr />
    foreach(var book in Model)
    {
        <h1>@book.Name</h1>

        <span>Genres:</span>
        foreach(var genreBook in book.BookGenre)
        {

            <span>@genreBook.Genre.Name ,</span>
        }
        <br />
            <span>Authors:</span>
        foreach(var authorBook in book.BookAuthor)
        {
            <span>@authorBook.Author.Name</span>
        }
        <hr />
    }
}
else{
    <a asp-controller="demo" asp-action="create" > Add Book</a>
    <h1>Empty List</h1>
}