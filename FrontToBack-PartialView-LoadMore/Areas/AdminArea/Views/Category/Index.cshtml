@model List<Categories>

@{
    ViewData["Title"] = "Index";
}
<div class="cotainer">
    <div class="row">
        <div class="col-lg-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Category Table</h4>
                    <p class="card-description">
                        <a asp-controller="category" asp-action="create">Add category</a>
                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Settings</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model)
                                {
                                <tr>
                                    <td>@item.Name</td>
                                    <td >
                                            <a asp-controller="category" asp-action="DeleteMiniTab" asp-route-id="@item.Id" class="btn btn-outline-danger"><i class="fa-solid fa-trash"></i></a>
                                            <a asp-controller="category" asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-warning"><i class="fa-regular fa-pen-to-square"></i></a>
                                            <a asp-controller="category" asp-action="detail" asp-route-id="@item.Id" class="btn btn-outline-info"><i class="fa-solid fa-info"></i></a>
                                            <span id="DeleteMinitab"></span>
                                    </td>
                                </tr>
                                    
                                }
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
